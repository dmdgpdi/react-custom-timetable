{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "composite": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/lib", "./src/custom.d.ts", "vite.config.ts"],
  "exclude": ["./node_modules"]
}
